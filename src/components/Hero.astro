<style>
	.hero {
		position: relative;
		min-height: auto;
		display: flex;
		align-items: center;
		background: linear-gradient(135deg, var(--color-bg) 0%, rgba(135, 169, 107, 0.08) 50%, var(--color-bg) 100%);
		padding: var(--spacing-lg) 0;
	}

	.hero-container {
		width: 100%;
		max-width: 1800px;
		margin: 0 auto;
		padding: 0 var(--spacing-md);
	}

	.hero-layout {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-lg);
		align-items: center;
		min-height: auto;
		position: relative;
		/* Safari fix: ensure grid items don't overflow */
		grid-auto-flow: row;
		width: 100%;
		box-sizing: border-box;
	}
	
	/* Safari fix: ensure grid columns are properly contained */
	.hero-image-section,
	.hero-content-section {
		min-width: 0;
		max-width: 100%;
		box-sizing: border-box;
	}

	.hero-image-section {
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 1;
		/* Safari fix: prevent overflow into adjacent column */
		overflow: visible;
		isolation: isolate;
		max-width: 100%;
	}

	.vintage-frame {
		position: relative;
		width: 100%;
		max-width: 350px;
		background: #e8e3d5;
		padding: 10px;
		box-shadow: 
			0 0 0 1px rgba(0, 0, 0, 0.1),
			0 15px 40px rgba(0, 0, 0, 0.15);
		transform: rotate(-2deg);
		transition: transform 0.6s ease;
		/* Safari-compatible aspect-ratio */
		aspect-ratio: 3 / 4;
		height: auto;
		min-height: 0;
		/* Safari fix: contain the transform to prevent overflow */
		will-change: transform;
		transform-origin: center center;
	}

	.vintage-frame:hover {
		transform: rotate(0deg) scale(1.02);
	}

	.frame-top {
		position: absolute;
		top: 10px;
		left: 10px;
		right: 10px;
		display: flex;
		justify-content: flex-end;
		align-items: center;
		padding: 8px 12px;
		background: #2c2c2c;
		z-index: 2;
	}

	.frame-bottom {
		position: absolute;
		bottom: 10px;
		left: 10px;
		right: 10px;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 8px 12px;
		background: #2c2c2c;
		z-index: 2;
	}

	.frame-label {
		font-size: 0.75rem;
		color: #e8e3d5;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		font-family: var(--font-sans);
	}

	.frame-content {
		position: absolute;
		top: calc(10px + 28px); /* top padding + frame-top height (8px padding + 12px padding + ~8px content) */
		left: 10px;
		right: 10px;
		bottom: calc(10px + 28px); /* bottom padding + frame-bottom height */
		background: #2c2c2c;
		padding: 8px;
		overflow: hidden;
	}

	.hero-headshot {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
		transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.vintage-frame:hover .hero-headshot {
		transform: scale(1.03);
	}

	.hero-content-section {
		display: flex;
		align-items: center;
		position: relative;
		justify-content: center;
		z-index: 2;
		overflow: visible;
	}

	.hero-content {
		max-width: 100%;
		width: 100%;
	}

	.hero-label {
		font-size: 0.7rem;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		color: var(--color-text-light);
		font-weight: 600;
		margin-bottom: var(--spacing-sm);
		opacity: 0.6;
		font-family: var(--font-sans);
	}

	.hero-name {
		font-size: clamp(2.5rem, 8vw, 6rem);
		font-family: var(--font-display);
		line-height: 0.9;
		margin-bottom: var(--spacing-md);
		color: var(--color-text);
		font-weight: 700;
		letter-spacing: -0.04em;
		text-transform: uppercase;
	}

	.hero-tagline {
		font-size: clamp(1rem, 2vw, 1.375rem);
		line-height: 1.6;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		font-weight: 300;
		max-width: 500px;
		opacity: 0.8;
		font-family: var(--font-display);
	}

	.hero-contact {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.contact-link {
		display: inline-flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm) 0;
		color: var(--color-text);
		font-weight: 400;
		font-size: 1rem;
		transition: var(--transition);
		border-bottom: 2px solid transparent;
		width: fit-content;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-size: 0.875rem;
		text-decoration: none;
	}

	.contact-link:hover {
		color: var(--color-primary);
		border-bottom-color: var(--color-primary);
	}

	.contact-link svg {
		flex-shrink: 0;
		opacity: 0.5;
		transition: var(--transition);
	}

	.contact-link:hover svg {
		opacity: 1;
	}

	@media (max-width: 1200px) {
		.hero-content {
			text-align: center;
		}

		.hero-label {
			text-align: center;
		}

		.hero-name {
			text-align: center;
		}

		.hero-tagline {
			margin-left: auto;
			margin-right: auto;
			text-align: center;
		}

		.hero-contact {
			align-items: center;
		}
	}

	@media (max-width: 968px) {
		.hero-layout {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
			min-height: auto;
			padding: var(--spacing-md) 0;
		}

		.hero-image-section {
			justify-content: center;
			padding-right: 0;
			order: 1;
		}

		.hero-content-section {
			padding-left: 0;
			order: 2;
		}

		.hero-content {
			text-align: center;
			max-width: 100%;
		}

		.hero-label {
			text-align: center;
		}

		.hero-name {
			text-align: center;
		}

		.hero-tagline {
			margin-left: auto;
			margin-right: auto;
			text-align: center;
		}

		.hero-contact {
			align-items: center;
		}

		.vintage-frame {
			transform: rotate(0deg);
			max-width: 320px;
		}

		.vintage-frame:hover {
			transform: scale(1.02);
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: auto;
			padding: var(--spacing-md) 0;
		}

		.hero-container {
			padding: 0 var(--spacing-sm);
		}

		.vintage-frame {
			max-width: 250px;
		}

		.hero-name {
			font-size: clamp(2rem, 10vw, 4rem);
			text-align: center;
		}

		.hero-label {
			text-align: center;
		}

		.hero-tagline {
			text-align: center;
		}

		.hero-contact {
			width: 100%;
			align-items: center;
		}

		.contact-link {
			width: 100%;
			justify-content: center;
		}
	}
</style>
