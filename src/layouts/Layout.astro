---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Brittany Gilbarte - Executive Operations Assistant",
	description = "Organized and service-minded professional with strong administrative skills, specializing in operations support, cross-cultural communication, and behind-the-scenes coordination."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--forest-green: #2d5016;
		--sage-green: #87a96b;
		--moss-green: #5a7c3a;
		--cream-bg: #faf8f3;
		--charcoal: #2c2c2c;
		--warm-gray: #6b6b6b;
		--earth-brown: #8b6f47;
		--golden-yellow: #d4a574;
		
		--color-primary: var(--forest-green);
		--color-primary-dark: #1f350f;
		--color-secondary: var(--sage-green);
		--color-accent: var(--moss-green);
		--color-text: var(--charcoal);
		--color-text-light: var(--warm-gray);
		--color-bg: var(--cream-bg);
		--color-bg-alt: #ffffff;
		--color-border: #e8e3d5;
		
		--font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		--font-display: 'Playfair Display', serif;
		
		--spacing-xs: 0.25rem;
		--spacing-sm: 0.75rem;
		--spacing-md: 1.5rem;
		--spacing-lg: 2.5rem;
		--spacing-xl: 3.5rem;
		
		--max-width: 1400px;
		--border-radius: 0;
		--transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		scroll-behavior: smooth;
		font-size: 16px;
	}

	body {
		font-family: var(--font-sans);
		color: var(--color-text);
		background: linear-gradient(180deg, #faf8f3 0%, #f5f3ed 50%, #faf8f3 100%);
		background-attachment: fixed;
		min-height: 100vh;
		line-height: 1.6;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 700;
		line-height: 1.2;
		color: var(--color-text);
	}

	h1 {
		font-size: clamp(2rem, 4vw, 3rem);
		font-family: var(--font-display);
		letter-spacing: -0.02em;
	}

	h2 {
		font-size: clamp(1.5rem, 3vw, 2.25rem);
	}

	h3 {
		font-size: clamp(1.25rem, 2.5vw, 1.75rem);
	}

	p {
		margin-bottom: 1rem;
	}

	a {
		color: var(--color-primary);
		text-decoration: none;
		transition: var(--transition);
	}

	a:hover {
		color: var(--color-primary-dark);
	}

	img {
		max-width: 100%;
		height: auto;
		display: block;
	}

	.container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 var(--spacing-sm);
	}

	@media (min-width: 768px) {
		.container {
			padding: 0 var(--spacing-md);
		}
	}

	.section {
		padding: var(--spacing-lg) 0;
	}

	@media (max-width: 768px) {
		.section {
			padding: var(--spacing-md) 0;
		}
	}
</style>
